<%= form_for @review, :html => { :class => "form-horizontal review" } do |f| %>

    <% if @review.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%= error_span(@review[:user_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :movie_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :movie_id, :class => 'form-control' %>
    </div>
    <%= error_span(@review[:movie_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :text, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :text, :class => 'form-control' %>
    </div>
    <%= error_span(@review[:text]) %>
  </div>
  <div class="control-group">
    <%= f.label :rating_out_of_ten, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :rating_out_of_ten, :class => 'form-control' %>
    </div>
    <%= error_span(@review[:rating_out_of_ten]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            reviews_path, :class => 'btn btn-default' %>

<% end %>
